vmthread MAIN {
    MOVE8_8(0, gKeepRet_8)

    OUTPUT_RESET(0, 15)
    INPUT_DEVICE(CLR_ALL, -1)

    CALL(modScreenInit)
    CALL(modSensorInit)
    CALL(modFileInit)
    CALL(modMotorInit)
    CALL(modPSPInit)
    CALL(modSensorMultiInit)
    CALL(load)
    CALL(run)
}

