#project "Record parameter demo"

#include "/lib/standard.whl"

record Point
    number   x, y, z
endr

Point    point
Point *p

proc printPoint(Point pt)
    printN(pt.x)
    printN(pt.y)
    printN(pt.z)
endp

proc main()
    set      point.x,                -5
    set      point.y,                9
    set      point.z,                -3
    set p, &point
    printPoint(*p)
endp