{
  "name": "Wheel",
  "version": "0.9.1",
  "repository": "https://github.com/ArnoVanDerVegt/wheel",
  "license": "https://arnovandervegt.github.io/wheel/site/license.html",
  "description": "Wheel IDE.",
  "main": "main.js",
  "dependencies": {
    "node-poweredup": "^6.7.0",
    "serialport": "^9.0.2",
    "v8-compile-cache": "^2.1.1"
  },
  "devDependencies": {
    "minimist": "^1.2.5",
    "electron": "^18.3.7",
    "electron-packager": "^14.0.6",
    "electron-rebuild": "^1.8.5",
    "eslint": "^6.2.2",
    "express": "^4.17.1",
    "istanbul": "^0.4.5",
    "mocha": "^7.1.1",
    "mocha-lcov-reporter": "^1.3.0"
  },
  "scripts": {
    "start": "electron .",
    "test": "node_modules/.bin/mocha --recursive",
    "cover": "istanbul cover node_modules/.bin/_mocha -- --recursive",
    "rebuild": "electron-rebuild -f",
    "build:mac": "electron-packager . --overwrite --asar --icon=./assets/icons/mac/icon.icns --prune=true",
    "build:win": "electron-packager . --overwrite --asar --icon=./assets/icons/win/icon.ico --prune=true",
    "build:icons": "electron-icon-maker --input=./tools/logo.png --output=./assets"
  },
  "build": {
    "mac": {
      "icon": "./icons/mac/icon.icns"
    }
  },
  "eslintConfig": {
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-mixed-spaces-and-tabs": [
        "error"
      ],
      "consistent-return": [
        "error"
      ],
      "curly": [
        "error"
      ],
      "eqeqeq": [
        "error"
      ],
      "no-else-return": [
        "error"
      ],
      "no-extra-bind": [
        "error"
      ],
      "no-self-compare": [
        "error"
      ],
      "no-self-assign": [
        "error"
      ],
      "no-sequences": [
        "error"
      ],
      "no-proto": [
        "error"
      ],
      "no-redeclare": [
        "error"
      ],
      "no-new-func": [
        "error"
      ],
      "no-multi-str": [
        "error"
      ],
      "no-extend-native": [
        "error"
      ],
      "no-void": [
        "error"
      ],
      "no-with": [
        "error"
      ],
      "yoda": [
        "error"
      ],
      "no-debugger": [
        "error"
      ],
      "no-compare-neg-zero": [
        "error"
      ],
      "getter-return": [
        "error"
      ],
      "no-dupe-args": [
        "error"
      ],
      "no-dupe-keys": [
        "error"
      ],
      "no-duplicate-case": [
        "error"
      ],
      "no-extra-semi": [
        "error"
      ],
      "block-scoped-var": [
        "error"
      ],
      "no-implicit-globals": [
        "error"
      ],
      "no-invalid-this": [
        "error"
      ],
      "no-labels": [
        "error"
      ],
      "no-loop-func": [
        "error"
      ],
      "no-new-wrappers": [
        "error"
      ],
      "no-return-assign": [
        "error"
      ],
      "no-script-url": [
        "error"
      ],
      "no-new-require": [
        "error"
      ],
      "no-mixed-requires": [
        "error"
      ],
      "no-path-concat": [
        "error"
      ],
      "camelcase": [
        "error"
      ],
      "no-trailing-spaces": [
        "error"
      ],
      "no-tabs": [
        "error"
      ],
      "one-var-declaration-per-line": [
        "error"
      ],
      "no-const-assign": [
        "error"
      ],
      "no-var": [
        "error"
      ],
      "valid-typeof": [
        "error"
      ],
      "no-alert": [
        "error"
      ],
      "capitalized-comments": [
        "warn",
        "always"
      ],
      "comma-dangle": [
        "error"
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "no-inner-declarations": [
        "error"
      ]
    },
    "env": {
      "es6": true
    }
  },
  "keywords": [
    "wheel",
    "lego",
    "mindstorms",
    "ev3",
    "ide",
    "compiler",
    "bluetooth"
  ],
  "engines": {
    "node": "12.9.x"
  }
}
